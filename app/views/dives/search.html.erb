<div class="row margin-top">
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
    <h1>search dives</h1>
    <%= form_tag(diver_dives_path(current_diver.id), method: :get) do -%>
      <p><%= label_tag 'location', 'location'%>  <%= text_field_tag 'location', nil, placeholder: 'Enter location...' %></p>

      <p><%= label_tag 'depth_min', 'depth minimum'%>  <%= number_field_tag 'depth_min', nil, placeholder: 'Enter depth...'%></p>
      <p><%= label_tag 'depth_max', 'depth maximum'%>  <%= number_field_tag 'depth_max', nil, placeholder: 'Enter depth...'%></p>

      <p><%= label_tag 'bottom_time_min', 'bottom time minimum'%>  <%= number_field_tag 'bottom_time_min', nil, placeholder: 'Enter bottom time...'%></p>
      <p><%= label_tag 'bottom_time_max', 'bottom time maximum'%>  <%= number_field_tag 'bottom_time_max', nil, placeholder: 'Enter bottom time...'%></p>

      <p><%= label_tag 'activity', 'activity'%>  <%= select_tag "dive_types", options_from_collection_for_select(DiveType.all, "id", "activity"), prompt: "dive type"%></p>
      <div><%= submit_tag 'search', class: "btn-bubl form-control" %></div>
      <% end -%>
  </div>
</div>
