<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1">
    <%- if controller_name != 'sessions' && controller_name != 'registrations'%>
      <div class="form-group field">
      <%= link_to "log in", new_session_path(resource_name), class: "btn-bubl form-control"%><br />
      </div>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' && controller_name != 'sessions' %>
      <div class="form-group field">
      <%= link_to "sign up", new_registration_path(resource_name), class: "btn-bubl form-control"%><br />
      </div>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "forgot your password?", new_password_path(resource_name), class: "btn-bubl form-control"%><br />
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "btn-bubl form-control"%><br />
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn-bubl form-control"%><br />
    <% end -%>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "dign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn-bubl form-control"%><br />
      <% end -%>
    <% end -%>
   </div>
</div>
